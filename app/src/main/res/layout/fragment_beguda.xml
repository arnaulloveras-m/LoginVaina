<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCafeteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivBeguda"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvBegudaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nom"
            app:layout_constraintStart_toEndOf="@+id/ivBeguda"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvBegudaPreu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Preu"
            app:layout_constraintStart_toEndOf="@+id/ivBeguda"
            app:layout_constraintTop_toBottomOf="@+id/tvBegudaName"/>

        <TextView
            android:id="@+id/tvBegudaDescripcio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Descripcio"
            app:layout_constraintStart_toEndOf="@+id/ivBeguda"
            app:layout_constraintTop_toBottomOf="@+id/tvBegudaPreu"/>
        <Button
            android:id="@+id/ButoPerAfegir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afegir Al Carrito"
            app:layout_constraintStart_toEndOf="@+id/ivBeguda"
            app:layout_constraintTop_toBottomOf="@+id/tvBegudaDescripcio"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>