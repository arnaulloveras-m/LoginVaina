<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCafeteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivCarrito"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvCarritoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nom"
        app:layout_constraintStart_toEndOf="@+id/ivCarrito"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvCarritoPreu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Preu"
        app:layout_constraintStart_toEndOf="@+id/ivCarrito"
        app:layout_constraintTop_toBottomOf="@+id/tvCarritoName"/>

    <TextView
        android:id="@+id/tvCarritoDescripcio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Descripcio"
        app:layout_constraintStart_toEndOf="@+id/ivCarrito"
        app:layout_constraintTop_toBottomOf="@+id/tvCarritoPreu"/>

    <TextView
        android:id="@+id/tvCarritoQuantitat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Quanitat"
        app:layout_constraintStart_toEndOf="@+id/ivCarrito"
        app:layout_constraintTop_toBottomOf="@+id/tvCarritoDescripcio"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>